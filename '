import cv2
import imagezmq
image_hub = imagezmq.ImageHub(open_port='tcp://100.93.253.22', REQ_REP=False)
image_hub.connect('tcp://100.93.253.22')
while True:  # show streamed images until Ctrl-C
    rpi_name, image = image_hub.recv_image()
    print('received img')
    cv2.imshow(rpi_name, image) # 1 window for each RPi
    cv2.waitKey(1)

